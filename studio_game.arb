def return_time
    actual_time = Time.new
    actual_time.strftime("%I:%M:%S")
end

def format_player_greeting(name)
    "I'm #{name.capitalize}."
end

def format_player_health(health=100)
    "My health is #{health}."
end

def show_players_infos(name, health=100)
    format_player_greeting(name) + ' ' + format_player_health(health) + "as of #{return_time}"
end

puts show_players_infos("Larry", 60)
puts show_players_infos("curly", 125)
puts show_players_infos("moe")
